<div class="mt-1 sm:col-span-2">
  <% if art_item.images.attached? %>
    <ul class="list-none grid grid-cols-2 gap-x-4 gap-y-4">
      <% art_item.images.each do |image| %>
        <li class="relative">
          <div class="group block w-full h-32 rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 focus-within:ring-indigo-500 overflow-hidden">
            <%= image_tag image.variant(:thumb), alt: image.blob.filename,
              class: "object-cover h-full w-full group-hover:opacity-75",
              data: {
                action: "click->modal#open",
                modal_url: art_item_art_item_images_path(art_item),
                modal_key: image.key
              } %>
          </div>
        </li>
      <% end %>
    </ul>
    <br>
    <div class="flex-shrink-0">
      <button type="button" class="secondary_blue_button">
        <%= link_to "Edit images", "#{art_item.id}/edit#attached_images" %>
      </button>
    </div>
  <% else %>
    <div class="flex-shrink-0">
      <span>
        No attached images.
      </span>
    </div>
    <div class="flex-shrink-0">
      <button type="button" class="secondary_blue_button">
        <%= link_to "Add images", "#{art_item.id}/edit#attached_images" %>
      </button>
    </div>
  <% end %>
</div>
