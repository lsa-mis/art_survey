<% if art_item.archived %>
  <%= render 'archived' %>
<% end %>  

<div class="grid grid-cols-2 place-content-between">
  <div class="mr-4">
    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Department
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= art_item.department.fullname %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Department contact
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= art_item.department_contact %>
      </div>
    </div>
    
    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Description
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= art_item.description %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Location building
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= art_item.location_building %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Location room
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= art_item.location_room %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Value cost
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= number_to_currency(art_item.value_cost) %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm tfont-medium ext-gray-900 sm:mt-0 sm:col-span-2">
      Date acquired
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= show_date(art_item.date_acquired) %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Appraisal type
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= art_item.appraisal_type.classification %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Appraisal Description
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= art_item.appraisal_description %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
      Protection
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= art_item.protection %>
      </div>
    </div>

  </div>

  <div class="ml-4">
    <h2>Record history</h2>
    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
        Updated by
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= show_user(art_item.updated_by) %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
        Created at
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= show_date(art_item.created_at) %>
      </div>
    </div>

    <div class="py-2">
      <label class="flex text-sm font-medium text-gray-900 sm:mt-0 sm:col-span-2">
        Updated at
      </label>
      <div class="ml-2 text-sm text-gray-700 flex-grow">
        <%= show_date(art_item.updated_at) %>
      </div>
    </div>
    <div>
      <div class="flex items-center">
        <div>
          <%= link_to 'Edit this item', edit_art_item_path(@art_item), class: "my-2 px-2 py-1 rounded-md shadow-sm bg-blue-umblue text-sm text-gray-100 text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400" %>
        </div>
        <div class="ml-2">
          <%= button_to 'Delete this item', art_item_path(@art_item), method: :delete, class: "my-2 px-2 py-1 rounded-md shadow-sm bg-gray-100 text-sm text-blue-umblue text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400" %>
        </div>
      </div>
      <div class="flex items-center">
        <%= svg("left-arrow-svgrepo-com") %>
        <%= link_to 'Back to search', art_items_path, class: "ml-1 bg-white rounded-md text-sm text-blue-umblue hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  </div>
</div>
