<div class="flex items-center sm:hidden">  
  <div id="mobile-menu" aria-labelledby="header-nav-menu-button" aria-orientation="vertical" 
        data-dropdown-entering-class="transition ease-out duration-200" 
        data-dropdown-invisible-class="opacity-0 -translate-y-1 scale-95" 
        data-dropdown-leaving-class="transition ease-in duration-150" 
        data-dropdown-target="menu" data-dropdown-visible-class="opacity-100  -translate-y-0" 
         tabindex="-1">
    <div class="pt-2 pb-3 space-y-1 text-white" id="header-nav-menu-button">
      <% if user_signed_in? %>
        <% if access_authorized! %>
          <%= link_to  "Catalog", art_items_path, class: "hover:bg-blue-50 hover:text-blue-700 block px-3 pr-4 py-2 text-base font-medium rounded w-screen max-w-xl #{class_names(active: current_page?(art_items_path))}" %>
          <%= link_to  "AdminDoc", "https://docs.google.com/document/d/e/2PACX-1vTKMfzTxp2I02KuuT_3S5t2OOA4vUIZObWUgnslilQSuh1XBUQgmTpODJGmyoLWZ5UkN-adzSBQgBc7/pub#h.zf7fqp6cccac", target: "_blank", class: "hover:bg-blue-50 hover:text-blue-700 block px-3 pr-4 py-2 text-base font-medium rounded w-screen max-w-xl" %>
        <% end %>
        <% if is_super_user! || is_department_admin_user! %>
          <hr class="ml-2 mx-auto w-48 h-1 bg-gray-100 rounded border-0 dark:bg-gray-700">
          <%= link_to "Access", accesses_path, class: "hover:bg-blue-50 hover:text-blue-700 block px-3 pr-4 py-2 text-base font-medium rounded w-screen max-w-xl #{class_names(active: current_page?(accesses_path))}" %>
        <% end %>
        <% if is_super_user! %>
          <hr class="ml-2 mx-auto w-48 h-px bg-gray-100 rounded border-0 dark:bg-gray-700">
          <span class="border-transparent text-blue-200 inline-flex items-center pr-1 pt-1 ml-2 border-b-2 text-xs font-normal">Application Configurations:</span>
          <%= link_to "Appraisal Types", appraisal_types_path, class: "hover:bg-blue-50 hover:text-blue-700 block px-3 pr-4 py-2 ml-3 text-xs font-medium rounded w-screen max-w-xl #{class_names(active: current_page?(appraisal_types_path))}" %>
          <%= link_to "Departments", departments_path, class: "hover:bg-blue-50 hover:text-blue-700 block px-3 pr-4 py-2 ml-3 text-xs font-medium rounded w-screen max-w-xl #{class_names(active: current_page?(departments_path))} " %>
          <%= link_to "Permissions", permissions_path, class: "hover:bg-blue-50 hover:text-blue-700 block px-3 pr-4 py-2 ml-3 text-xs font-medium rounded w-screen max-w-xl #{class_names(active: current_page?(permissions_path))} " %>
          <%= link_to "Roles", roles_path, class: "hover:bg-blue-50 hover:text-blue-700 block px-3 pr-4 py-2 ml-3 text-xs font-medium rounded w-screen max-w-xl #{class_names(active: current_page?(roles_path))}" %>
          <%= link_to "Users", users_path, class: "hover:bg-blue-50 hover:text-blue-700 block px-3 pr-4 py-2 ml-3 text-xs font-medium rounded w-screen max-w-xl #{class_names(active: current_page?(users_path))}" %>
        <% end %>
      <% end %>
      <div class="grid grid-col-2 gap-2 justify-items-end mr-8">
        <div>
          <% if user_signed_in? %>
            <div class="leading-tight text-md font-medium text-white">
              <%= current_user.email %>
            </div>
            <%= button_to destroy_user_session_path, method: :delete, role: "menuitem", tabindex: "-1", data: {turbo: "false"} do  %>
              <div class="w-60 py-3 shadow-sm font-medium rounded text-blue-900 bg-yellow-550 hover:bg-yellow-500 hover:underline">Sign Out</div>
            <% end %>
          <% else %>
            <%= button_to user_saml_omniauth_authorize_path, data: {turbo: "false"} do %>
              <div class="w-60 py-3 shadow-sm font-medium rounded text-blue-900 bg-yellow-550 hover:bg-yellow-500 hover:underline">Sign In</div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
