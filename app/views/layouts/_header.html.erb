              <button id="user-menu-button" class="bg-white rounded-full flex-1 text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" tabindex="-1" aria-expanded="false" aria-haspopup="true" type="button" data-action="click->dropdown#toggle click@window->dropdown#hide">
                <span class="sr-only bg-white text-black">Open user menu</span>
              </button>
              <div class="leading-tight text-sm font-medium text-white">
                <%= current_user.email %>
              </div>
              <%= button_to destroy_user_session_path, method: :delete, role: "menuitem", data: {turbo: "false"} do %>
                <div class="px-1 ml-2 shadow-sm font-medium rounded text-blue-900 bg-yellow-550 hover:bg-yellow-500 flex-1 hover:underline">Sign Out</div>
              <% end %>
            <% else %>
              <div>
                <%= button_to user_saml_omniauth_authorize_path, data: {turbo: "false"} do %>
                  <div class="px-1 shadow-sm font-medium rounded text-blue-900 bg-yellow-550 hover:bg-yellow-500 hover:underline">Sign In</div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="md:hidden items-center mt-1">
        <%= render 'layouts/mobile_menu_toggle' %>
      </div>
    </div>
    <%= render 'layouts/mobile_menu_dropdown' %>
  </div>
  <div class="w-auto max-w-7xl mx-auto px-4 bg-blue-umblue ">
    <div class="flex justify-between">
      <div class="flex-shrink-0 flex items-center">
        <div class="hidden md:ml-6 md:flex md:space-x-4">
          <% if user_signed_in? %>
            <% if is_super_user! %>
              <div class="border-transparent text-blue-200 inline-flex items-center pr-1 pt-1 border-b-2 text-xs font-normal">Application Configurations:</div>
              <div class="border-transparent text-blue-50 hover:border-blue-300 hover:text-white inline-flex items-center pr-1 pt-1 border-b-2 text-xs font-normal"><%= link_to "Appraisal Types", appraisal_types_path, class: "#{class_names(active: current_page?(appraisal_types_path))}"%></div>
              <div class="border-transparent text-blue-50 hover:border-blue-300 hover:text-white inline-flex items-center pr-1 pt-1 border-b-2 text-xs font-normal"><%= link_to "Departments", departments_path, class: "#{class_names(active: current_page?(departments_path))}"%></div>
              <div class="border-transparent text-blue-50 hover:border-blue-300 hover:text-white inline-flex items-center pr-1 pt-1 border-b-2 text-xs font-normal"><%= link_to "Permissions", permissions_path, class: "#{class_names(active: current_page?(permissions_path))}"%></div>
              <div class="border-transparent text-blue-50 hover:border-blue-300 hover:text-white inline-flex items-center pr-1 pt-1 border-b-2 text-xs font-normal"><%= link_to "Roles", roles_path, class: "#{class_names(active: current_page?(roles_path))}"%></div>
              <div class="border-transparent text-blue-50 hover:border-blue-300 hover:text-white inline-flex items-center pr-1 pt-1 border-b-2 text-xs font-normal"><%= link_to "Users", users_path, class: "#{class_names(active: current_page?(users_path))}"%></div>
