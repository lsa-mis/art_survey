<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @appraisal_type %>

    <%= link_to 'Edit', edit_appraisal_type_path(@appraisal_type), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy', appraisal_type_path(@appraisal_type), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back', appraisal_types_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
