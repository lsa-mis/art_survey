<div id="<%= dom_id department %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Deptid:</strong>
    <%= department.deptID %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Fullname:</strong>
    <%= department.fullname %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Shortname:</strong>
    <%= department.shortname %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Updated by:</strong>
    <%= show_user_name_by_id(department.updated_by) %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show", department, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit', edit_department_path(department), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
