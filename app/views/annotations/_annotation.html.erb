<%= turbo_frame_tag annotation do %>
  <hr class= "flex-1 border-t border-blue-600 my-1">
  <div>
    <div class="w-full text-xs">
      <div class="flex text-base space-x-2 items-center pt-1">
        <div><%= annotation.note %></div>
      </div>
      <div class="flex items-center">
        <div>
          Updated on 
          <%= annotation.updated_at.strftime('%m/%d/%Y') %>
        </div>
        <div class="flex items-center p-1">
          by
          <%= show_user(annotation.created_by) %>
          <%= link_to "Edit", edit_annotation_path(annotation), class: "px-2 ml-2 rounded-md shadow-sm bg-gray-100 text-sm text-black text-center ring-1 ring-black ring-opacity-5 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 hover:bg-gray-400" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
